<main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
   <p class="h2 text-center mt-4">Agregar Foto</p>
   <div class="row mt-4 ">
      <div class="col-md-4 mx-auto">
         <div class="myform form ">
            <form action="/photos/save" method="post" name="add">
               <div class="form-group mt-2">
                  <input type="text" name="title"  class="form-control" id="title" placeholder="Título" required="required">
               </div>
               <div class="form-group mt-2">
                  <input type="text" name="description"  class="form-control" id="description" placeholder="Descripción" required="required">
               </div>
               <div class="form-group mt-2">
                  <input type="number" min="0" max="10" step="0.1" name="rate" id="rate"  class="form-control" placeholder="Calificación" required="required">
               </div>
               <div class="form-group mt-2 text-center">
                  <input type="file" name="route" id="route" accept=".png" required="required" />
               </div>
               <div class="text-center mt-4">
                  <button type="submit" class="btn btn-primary">Add</button>
               </div>
            </form>
         </div>
      </div>
   </div>
</main>